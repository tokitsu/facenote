
<h2>投稿一覧</h2>
<%= notice %><br>

<% @blogs.each do |blog|%>
<tr>
<td>ユーザー<%= blog.user.name%></td><br>
<td>タイトル<%= blog.title %></td><br>
<td>内容<%= blog.content %></td><br>
<td><%= image_tag blog.image %></td><br>
<td><%= link_to "チェック",blog_path(blog.id)%></td>
<td><%= link_to "編集",edit_blog_path(blog.id) %></td>
<td><%= link_to "削除",blog_path(blog.id), method: :delete %></td><br><br><br>
</tr>
<% end %><br>
<%= link_to "新しく投稿する", new_blog_path %><br>
<%= link_to "ホームに戻る", user_path(current_user.id) %><br>